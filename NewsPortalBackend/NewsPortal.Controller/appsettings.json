{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=news_portal;Username=postgres;Password=1234"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Key": "your-secret-key-for-jwt",
    "Issuer": "NewsPortal",
    "Audience": "NewsPortalUsers",
    "ExpiryMinutes": 60
  },
  "Smtp": {
    "Host": "smtp.example.com",
    "Port": 587,
    "Username": "your-smtp-username",
    "Password": "your-smtp-password",
    "SenderEmail": "no-reply@example.com",
    "SenderName": "News Portal",
    "EnableSsl": true
  }
}
